<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>
<main role="main" class="container mt-4">
    <h2>Your Applied Leaves</h2>
    <% if (leaveApplications && leaveApplications.length > 0) { %>
    <table class="table table-hover" id="leaveApplicationsTable">
        <thead>
            <tr>
                <th>Type of Leave</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Reason</th>
                <th>Status</th>
                <th>Manager Remarks</th>
            </tr>
        </thead>
        <tbody>
            <% leaveApplications.forEach(function(application) { %>
                <tr>
                    <td><%= application.leaveType %></td>
                    <td><%= new Date(application.startDate).toLocaleDateString() %></td>
                    <td><%= new Date(application.endDate).toLocaleDateString() %></td>
                    <td><%= application.reason %></td>
                    <td><%= application.status %></td>
                    <td><%= application.remarks ? application.remarks : "No remarks" %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <% } else { %>
        <div class="alert alert-info" role="alert">
            No leave applications found.
        </div>
    <% } %>
    <div class="mt-3">
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</main>
<%- include('partials/_footer.ejs') %>
<script src="/js/main.js"></script>
</body>
</html>